<view class="container">

<!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="../../images/name.png"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText"  placeholder="请输入账号" type='tel' bindinput="phoneInput" /> 
 </view> 
 <view class="line"></view> 
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../../images/key.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 

 <view class="inputView"> 
  <image class="keyImage" src="../../images/key.png"></image> 
  <label class="loginLab">确认密码</label> 
  <input class="inputText" password="true" placeholder="请再次输入密码密码" bindinput="passwordInputAgain" /> 
 </view> 

<!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="logon">注册</button> 
</view>
</view>